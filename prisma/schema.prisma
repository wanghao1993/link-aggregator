// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  collections           Collection[]
  bookmarkedLinks       BookmarkedLink[]
  bookmarkedCollections BookmarkedCollection[]
}

// NextAuth models
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Collection model
model Collection {
  id          String   @id @default(cuid())
  title       String
  description String?
  slug        String   @unique
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  collectionLinks      CollectionLink[]
  bookmarkedBy         BookmarkedCollection[]

  @@index([slug])
  @@index([userId])
  @@index([isPublic])
}

// Link model
model Link {
  id          String   @id @default(cuid())
  url         String
  title       String
  description String?
  favicon     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  collectionLinks CollectionLink[]
  bookmarkedBy    BookmarkedLink[]

  @@index([url])
}

// CollectionLink - Many-to-many relationship between Collection and Link
model CollectionLink {
  id           String   @id @default(cuid())
  collectionId String
  linkId       String
  order        Int      @default(0)
  status       String?  // 'used' or 'later'
  createdAt    DateTime @default(now())

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  link       Link       @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@unique([collectionId, linkId])
  @@index([collectionId])
  @@index([linkId])
}

// BookmarkedLink - User's bookmarked links
model BookmarkedLink {
  id        String   @id @default(cuid())
  userId    String
  linkId    String
  status    String?  // 'used' or 'later'
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  link Link @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@unique([userId, linkId])
  @@index([userId])
  @@index([linkId])
}

// BookmarkedCollection - User's bookmarked collections
model BookmarkedCollection {
  id           String   @id @default(cuid())
  userId       String
  collectionId String
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@unique([userId, collectionId])
  @@index([userId])
  @@index([collectionId])
}
